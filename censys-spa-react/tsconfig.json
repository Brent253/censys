{
  "compilerOptions": {
    "module": "esnext", // Ensure you use 'esnext' for Jest compatibility
    "target": "esnext", // Latest JavaScript features
    "jsx": "react-jsx", // For React JSX Transform
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "src/types/**/*.d.ts",
    "jest.config.ts"
  ]
}